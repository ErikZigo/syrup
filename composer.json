{
    "name": "syrup",
    "description": "Syrup - Concentrated extract(or)s",
    "autoload": {
        "psr-0": { "": "src/" }
    },
	"repositories": [
                {
                        "type": "vcs",
                        "url": "git@bitbucket.org:keboola/keboola-pingdom-bundle.git"
                },
		{
			"type": "vcs",
			"url": "git@bitbucket.org:keboola/syrup-slevomat-bundle.git"
		},
		{
			"type": "vcs",
			"url": "git@bitbucket.org:keboola/syrup-db-bundle.git"
		},
		{
			"type": "vcs",
			"url": "git@bitbucket.org:keboola/gooddata-writer.git"
		},
		{
			"type": "package",
			"package": {
				"name": "gooddata/gooddata-cl",
				"version": "1.2.67",
				"dist": {
					"url": "http://developer.gooddata.com/downloads/cl-tool/gooddata-cli.zip",
					"type": "zip"
				}
			}
		}
	],
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "2.2.*",
		"doctrine/orm": "~2.2,>=2.2.3",
	    "doctrine/doctrine-bundle": "1.2.*",
	    "symfony/assetic-bundle": "2.1.*",
        "symfony/monolog-bundle": "2.2.*",
        "sensio/distribution-bundle": "2.2.*",
        "sensio/framework-extra-bundle": "2.2.*",
        "sensio/generator-bundle": "2.2.*",
	    "syrup/component-bundle": "1.1.*",
	    "syrup/slevomat-bundle": "1.0.*",
		"syrup/db-bundle": "1.0.*",
		"keboola/gooddata-writer": "4.2.*",
        "keboola/pingdom-bundle": "1.0.*"
    },
    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
	"config": {
		"bin-dir": "bin"
	},
    "minimum-stability": "alpha",
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
		"branch-alias": {
            "dev-master": "2.2-dev"
        }
    }
}
